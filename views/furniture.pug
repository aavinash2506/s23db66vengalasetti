


extends layout
 
block content
  h1= title
  .container-fluid
    .row
      - for (let f of results)
        .col-sm-2
          p Item type: #{f.item_type}
          p Material: #{f.material}
          p Price: #{f.price}
          
  br
  h3= 'Buy'
 
  div(class="container-fluid")
    each furniture,index in results
      div(class="row", onclick=`buy(${index})`)
        div(class="col-sm-2") <br>Furniture #{index}: #{furniture.item_type} Material: #{furniture.material} Price: #{furniture.price}
  script.
        function buy(j){
          alert('You Purchased item ' + (j+1))    
        }
 
 